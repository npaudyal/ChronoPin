# Podfile
platform :ios, '13.0'
use_frameworks! # Required for Swift pods

target 'ChronoPin' do
  # Firebase Core
  pod 'Firebase/Analytics'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'Firebase/Storage'
  
  # Explicitly include Firestore Swift bindings
  pod 'FirebaseFirestoreSwift'
end
